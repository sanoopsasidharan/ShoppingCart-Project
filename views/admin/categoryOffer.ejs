    <script>
        $('#add-offer').submit((num) => {
            num.preventDefault()
            $.ajax({
                url: '/admin/addNewcategoryOffer',
                data: $('#add-offer').serialize(),
                method: 'post',
                success: (response) => {
                    if (response.status) {
                        Swal.fire({
                            title: '',
                            text: 'Add new category offer',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        })
                        $("#tableId").load(location.href + " #tableId");
                        $("#seller-details").load(location.href + " #seller-details");
                    } else {
                        alert('somthing error plz try again')
                    }

                }
            })
        })
        function deleterOffer(offerId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't delete this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: ' delete '
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/admin/deleteCategoryOffer",
                        data: { offerId: offerId },
                        method: 'post',
                        success: (response) => {
                            if (response.status) {
                                Swal.fire(
                                    'Deleted!',
                                    'Your file has been deleted.',
                                    'success'
                                )
                                $("#tableId").load(location.href + " #tableId");
                            } else {
                                alert('somthing error plz delete again')
                            }
                        }
                    })

                }
            })

        }
    </script>

